<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <RootNamespace>Loupedeck.LogitumAdaptiveRing</RootNamespace>
    <AssemblyName>LogitumAdaptiveRingPlugin</AssemblyName>

    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>

    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

    <!-- Plugin API Directory -->
    <PluginApiDir Condition="$(OS) == 'Windows_NT'">C:\Program Files\Logi\LogiPluginService\</PluginApiDir>
    <PluginApiDir Condition="$(OS) != 'Windows_NT'">/Applications/Utilities/LogiPluginService.app/Contents/MonoBundle/</PluginApiDir>

    <!-- Plugin Directory -->
    <PluginDir Condition="$(OS) == 'Windows_NT'">$(LocalAppData)\Logi\LogiPluginService\Plugins\</PluginDir>
    <PluginDir Condition="$(OS) != 'Windows_NT'">~/Library/Application\ Support/Logi/LogiPluginService/Plugins/</PluginDir>

    <!-- Output Configuration -->
    <BaseOutputPath>$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\..\bin\'))</BaseOutputPath>
    <OutputPath>$(BaseOutputPath)$(Configuration)\bin\</OutputPath>

    <!-- Plugin Short Name (used for reload command) -->
    <PluginShortName>LogitumAdaptiveRing</PluginShortName>

    <!-- Metadata -->
    <Version>0.1.0</Version>
    <Authors>SlothLite Development Team</Authors>
    <Description>AI-powered context-aware actions for Logitech MX devices via Model Context Protocol</Description>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Check if PluginApi.dll exists and define a constant accordingly -->
    <DefineConstants Condition="!Exists('$(PluginApiDir)PluginApi.dll')">$(DefineConstants);NO_PLUGIN_API</DefineConstants>
    <DefineConstants Condition="Exists('$(PluginApiDir)PluginApi.dll')">$(DefineConstants);HAS_PLUGIN_API</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <!-- NuGet Package References -->
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference to Logi Plugin API (only if it exists) -->
    <Reference Include="PluginApi" Condition="Exists('$(PluginApiDir)PluginApi.dll')">
      <HintPath>$(PluginApiDir)PluginApi.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude stub classes when PluginApi.dll IS available -->
    <Compile Remove="Stubs\**\*.cs" Condition="Exists('$(PluginApiDir)PluginApi.dll')" />
  </ItemGroup>

  <!-- Warn if PluginApi.dll is missing (development mode) -->
  <Target Name="CheckPluginApi" BeforeTargets="CoreCompile">
    <Warning Condition="!Exists('$(PluginApiDir)PluginApi.dll')" Text="âš ï¸  PluginApi.dll not found - using STUB classes for development. Install Logitech Options+ for real plugin: https://www.logitech.com/en-us/software/logi-options-plus.html" />
    <Message Condition="Exists('$(PluginApiDir)PluginApi.dll')" Text="âœ… PluginApi.dll found - building REAL plugin" Importance="High" />
  </Target>

  <!-- Copy metadata files after build -->
  <Target Name="CopyMetadata" AfterTargets="PostBuildEvent">
    <Message Text="ðŸ“¦ Copying metadata files..." Importance="High" />
    <ItemGroup>
      <MetadataFiles Include="metadata\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(MetadataFiles)" DestinationFiles="@(MetadataFiles->'$(BaseOutputPath)$(Configuration)\%(Identity)')" ContinueOnError="true" />
    <Message Text="âœ… Metadata files copied to $(BaseOutputPath)$(Configuration)\metadata\" Importance="High" />
  </Target>
  <!-- Create plugin link and reload -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Condition="$(OS) == 'Windows_NT'" Command="echo $(BaseOutputPath)$(Configuration)\&gt; &quot;$(PluginDir)$(ProjectName).link&quot;" />
    <Exec Condition="$(OS) != 'Windows_NT'" Command="echo $(BaseOutputPath)$(Configuration)\ &gt; $(PluginDir)$(ProjectName).link" />
    <Message Text="ðŸ”¨ Created plugin link at: $(PluginDir)$(ProjectName).link" Importance="High" />

    <Message Text="ðŸ”„ Sending plugin reload command for $(PluginShortName) to Logi Plugin Service" Importance="High" />
    <Exec Condition="$(OS) == 'Windows_NT'" Command="start loupedeck:plugin/$(PluginShortName)/reload" ContinueOnError="true" />
    <Exec Condition="$(OS) != 'Windows_NT'" Command="open loupedeck:plugin/$(PluginShortName)/reload" ContinueOnError="true" />
    <Message Condition="'$(MSBuildLastTaskResult)' == 'false'" Text="âŒ Couldn't reload the plugin, please restart the Logi Plugin Service manually" Importance="High" />
  </Target>

  <!-- Clean up plugin link -->
  <Target Name="PluginClean" AfterTargets="CoreClean">
    <Message Text="ðŸ§¹ Cleaning up plugin link file and output directories..." Importance="High" />

    <Delete Condition="$(OS) == 'Windows_NT'" Files="$(PluginDir)$(ProjectName).link" />
    <Exec Condition="$(OS) != 'Windows_NT'" Command="rm -f $(PluginDir)$(ProjectName).link" />

    <RemoveDir Directories="$(OutputPath)..\" />

    <Message Text="ðŸ§¼ Plugin link file and output directories have been cleaned!" Importance="High" />
  </Target>

</Project>
